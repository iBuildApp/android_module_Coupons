<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/romanblack_coupon_feed_item"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent" android:layout_weight="1">
        
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="80dp"
                      android:orientation="vertical">
            
            <TextView android:text="@string/title"
                      android:id="@+id/romanblack_coupon_title"
                      android:textSize="14sp"
                      android:textColor="#222"
                      android:layout_margin="5dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
            
            <TextView android:text="@string/discription"
                      android:id="@+id/romanblack_coupon_description"
                      android:textSize="12sp"
                      android:textColor="#444"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="5dp"
                      android:layout_marginBottom="5dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout android:orientation="vertical"
                  android:layout_width="30dp"
                  android:layout_height="fill_parent" android:gravity="center">
        
        <ImageView android:layout_width="10dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/romanblack_coupon_feed_item_arrow"
                   android:src="@drawable/romanblack_coupon_arrow_light"/>
        
    </LinearLayout>
    
</LinearLayout>	